<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAddProd">

    <ImageButton
        android:id="@+id/btnImgProd"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/ic_manage360_cam1"
        android:scaleType="centerCrop" />

    <EditText
        android:id="@+id/txtCod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnImgProd"
        android:layout_marginTop="20dp"
        android:hint="Codigo"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtNom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCod"
        android:layout_marginTop="20dp"
        android:hint="Nombre"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/txtMar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNom"
        android:layout_marginTop="20dp"
        android:hint="Marca"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/txtDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtMar"
        android:layout_marginTop="20dp"
        android:hint="Descripcion"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/txtPrec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDesc"
        android:layout_marginTop="20dp"
        android:hint="Precio"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/txtCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPrec"
        android:layout_marginTop="20dp"
        android:hint="Costo"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/txtStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCost"
        android:layout_marginTop="20dp"
        android:hint="Stock"
        android:inputType="number" />

    <Button
        android:id="@+id/btnGuardarProd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtStock"
        android:layout_marginTop="20dp"
        android:text="GUARDAR PRODUCTO" />
</RelativeLayout>